---
import BaseLayout from "@/layouts/base.astro";
import Section from "@/layouts/section.astro";
import { Icon } from "astro-icon/components";
---

<BaseLayout>
  <Section id="donaciones">
    <section class="min-h-screen py-24">
      <h2 class="text-4xl font-bold uppercase text-center mb-8">donaciones</h2>
      <div class="border p-4 py-8 shadow text-base max-w-[400px] mx-auto md:text-lg">
        <h3 class="font-bold mb-4">
          IGLESIA JESUCRISTO MI ESPERANZA SUNCHALES
        </h3>
        <p class="mb-2"><strong>CVU:</strong> 0000003100096132904501</p>
        <p class="mb-2">
          
          <strong>Alias:</strong>
          iglesia.ijme.sun
          <button class="ml-4 lg:hidden active:text-blue-600" id="alias">
            <Icon name="copy" />
          </button>
        </p>
        <p class="mb-2"><strong>CUIT/CUIL:</strong> 30718147855</p>
        <div class="flex items-center gap-3">
          <p class="font-bold">Mercado Pago</p>
          <Icon class="text-blue-600 text-3xl" name="mercado-pago" />
        </div>
      </div>
    </section>
  </Section>
</BaseLayout>

<script>
  const selector = (elemento: string): HTMLElement =>
    document.querySelector(elemento)!;

  const aliasBtn = selector("#alias");

  aliasBtn.addEventListener("click", async () => {
    await navigator.clipboard.writeText("wasi waso");
  });
</script>
