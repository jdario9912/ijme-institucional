---
import { Icon } from "astro-icon/components";

const urlRadio = "https://genexservicios.com:8052/stream";
---

<div>
  <audio class="hidden" src={urlRadio} id="audio"></audio>

  <div class="container flex items-center">
    <input id="checkbox" type="checkbox" name="radio" />
    <label class="button" for="checkbox">
      <Icon class="on-off" name="on-off-radio" />
      <span class="text-xs capitalize">radio encuentro</span>
    </label>
  </div>
</div>

<script>
  import "@/scripts/reproductor-radio";
</script>

<style>
  .container {
    width: 7em;
    height: 7em;
    position: relative;
  }

  .button {
    display: flex;
    align-items: center;
    gap:5px;
    border-radius: 100%;
    background-color: transparent;
    box-sizing: border-box;
  }

  .container input {
    display: none;
  }

  .button .on-off {
    height: 2rem;
    width: 2rem;
    color: #a5a5a5;
    margin: auto 0;
  }

  .container input:checked + .button .on-off {
    width: 2.3rem;
    height: 2.3rems;
    fill: rgba(247, 251, 216, 0.635);
    transform: scale(110%);
    animation: animeFill 0.5s linear alternate-reverse infinite;
    /* border: 2px solid rgba(255, 246, 77, 0.3); */
    border-radius: 100%;
  }

  @keyframes animeFill {
    to {
      color: rgba(255, 246, 77, 0.886);
    }
  }
</style>
